<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:shrinkColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:background="@color/tabDividerColor" >
            <View
                android:layout_height="3dp">
            </View>
        </TableRow>

        <TableRow
            android:background="@color/tabColor1">
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/tabDividerColor">
            </View>

            <TextView
                android:layout_height="40dp"
                android:text="@string/products"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textAlignment="center">
            </TextView>

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/tabDividerColor">
            </View>

            <TextView
                android:layout_width="246dp"
                android:text="@string/weight_in_grams"
                android:textSize="20sp"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/black">
            </TextView>
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/tabDividerColor">
            </View>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:background="@color/tabDividerColor"
            android:layout_height="match_parent">
            <View
                android:layout_height="3dp">
            </View>
        </TableRow>

        <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:shrinkColumns="1">
        <TableRow
            android:background="@color/tabColor2"
            android:layout_height="match_parent">
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/tabDividerColor">
            </View>

            <TextView
                android:layout_height="40dp"
                android:id="@+id/textView">
            </TextView>

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/tabDividerColor">
            </View>

            <TextView
                android:layout_width="46.7dp"
                android:textSize="12sp"
                android:text="@string/glass_250_ml"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/black">
            </TextView>
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/tabDividerColor">
            </View>
            <TextView
                android:layout_width="46.7dp"
                android:text="@string/glass_100_ml"
                android:textSize="12sp"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/black">
            </TextView>
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/tabDividerColor">
            </View>
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="46.8dp"
                android:text="@string/tablespoon"
                android:textSize="11sp"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/black">
            </TextView>
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/tabDividerColor">
            </View>
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="46.8dp"
                android:textSize="11sp"
                android:text="@string/teaspoon"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/black">
            </TextView>
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/tabDividerColor">
            </View>
            <TextView
                android:layout_width="46.8dp"
                android:textSize="12sp"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/black">
            </TextView>
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/tabDividerColor">
            </View>
        </TableRow>
    </TableLayout>
    </TableLayout>

</ScrollView>